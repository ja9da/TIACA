<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="dk.newtec.tiaca.CamSettingsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:id="@+id/camName"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/camNameText"
        android:gravity="left|center_vertical" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ip"
        android:id="@+id/camIp"
        android:textSize="20dp"
        android:layout_alignTop="@+id/camIpText"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/camIpText"
        android:layout_alignEnd="@+id/camPort"
        android:gravity="left|center_vertical"/>/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Port"
        android:id="@+id/camPort"
        android:layout_alignParentStart="true"
        android:textSize="20dp"
        android:layout_below="@+id/camIp"
        android:layout_alignBottom="@+id/camPortText"
        android:gravity="left|center_vertical"/>/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/camNameText"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/camName"
        android:textSize="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/camIpText"
        android:layout_below="@+id/camNameText"
        android:layout_alignStart="@+id/camNameText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/camPortText"
        android:layout_below="@+id/camIpText"
        android:layout_alignStart="@+id/camIpText" />
</RelativeLayout>
